    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.53.2",
    "react-router-dom": "^6.28.0",
    "swr": "^2.2.5",
    "uuid": "^11.0.3",
    "yup": "^1.4.0",
    "zod": "^3.23.8",
    "zustand": "^5.0.1"
  },
  "devDependencies": {
    "@async-ttrpg/eslint-config-custom": "*",
    "@async-ttrpg/tsconfig": "*",
    "@azure/static-web-apps-cli": "^2.0.1",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
