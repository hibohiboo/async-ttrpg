  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "prebuild": "rimraf  ./node_modules/.tmp",
    "build": "tsc -b && vite build --mode staging",
    "lint": "eslint ./src",
    "fsd-lint": "steiger ./src --watch",
