{
  "name": "@async-ttrpg/api",
  "version": "0.0.1",
  "description": "",
  "scripts": {
    "tsc": "tsc -p tsconfig.build.json",
    "prebuild": "npm run clean && npm run prisma-generate",
    "build": "esbuild src/functions/index.ts --bundle --platform=node --target=node22 --outdir=dist/src/functions --external:@azure/functions-core --minify --tsconfig=tsconfig.build.json",
    "watch": "tsc -w",
    "clean": "rimraf dist",
    "azurite": "azurite --silent --location c:/azurite --debug c:/azurite/debug.log",
    "azurite-https": "cross-env MSYS_NO_PATHCONV=1 azurite --silent --location c:/azurite --debug c:/azurite/debug.log --oauth basic --cert %USERPROFILE%/.ssh/mkcert/127.0.0.1.pem --key %USERPROFILE%/.ssh/mkcert/127.0.0.1-key.pem",
    "predev": "npm run build",
    "dev": "func start --port 7071",
    "lint": "eslint src/*",
    "prisma-pull-local": "dotenv -e .env.local -- bash -c 'npx prisma db pull'",
    "prisma-pull": "prisma db pull",
    "prisma-generate": "prisma generate",
    "predeploy": "npm run build",
    "deploy": "dotenv -e .env -- bash -c 'func azure functionapp publish $APP_NAME --subscription $AZURE_SUBSCRIPTION_ID'",
    "db:up": "cd ../../database && bash ./bin/up.sh",
    "ncu": "ncu -u",
    "test": "vitest --project=unit-test",
    "az-test": "vitest --project=azurite-test",
    "az-test-https": "vitest --project=azurite-test-https"
  },
  "dependencies": {
    "@azure/arm-resourcegraph": "^4.2.1",
    "@azure/functions": "^4.7.0",
    "@azure/identity": "^4.9.1",
    "@azure/storage-blob": "^12.27.0",
    "@azure/storage-queue": "^12.26.0",
    "@hono/swagger-ui": "^0.5.1",
    "@hono/zod-openapi": "^0.19.6",
    "@hono/zod-validator": "^0.5.0",
    "@marplex/hono-azurefunc-adapter": "^1.0.1",
    "@prisma/client": "^6.7.0",
    "date-fns": "^4.1.0",
    "durable-functions": "^3.1.0",
    "hono": "^4.7.8",
    "mssql": "^11.0.1",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@async-ttrpg/eslint-config-custom": "*",
    "@async-ttrpg/tsconfig": "*",
    "@types/mssql": "^9.1.7",
    "@types/node": "^22.15.15",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^8.0.0",
    "esbuild": "^0.25.4",
    "prettier-plugin-embed": "^0.5.0",
    "prettier-plugin-sql": "^0.19.0",
    "prisma": "^6.7.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.3",
    "zod-prisma-types": "^3.2.4"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.40.2"
  },
  "main": "dist/src/{app.js,functions/*.js}"
}
